---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<div>
		<CallToAction href="mailto:contact@abiel.dev">
			Send Me a Message
			<Icon icon="paper-plane-tilt" size="1.2em" />
		</CallToAction>
		<div style={{
			padding: "2rem 0rem"
		}}>
			<h3>Email: <a class="link" href="mailto:contact@abiel.dev">contact@abiel.dev<a/></h3>
			<h3>Or reach out to me on my <a class="link" href="https://www.linkedin.com/in/abiel-fernandez/">LinkedIn.</a></h3>
		</div>
	</div>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.link:hover {
		text-decoration: underline;
	}

	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
</style>
